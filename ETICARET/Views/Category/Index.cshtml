@model List<ETICARET.Entity.Category>

@{
    ViewBag.Title = "Index";
}

<h2 class="mt-3">Kategori Listesi</h2>
<hr />
<p>
    @Html.ActionLink("Yeni Kategori", "Create", null, new {@class="btn btn-primary btn-sm"})
</p>
<hr />
<table class="table table-bordered table-striped">
    <tr>
        <th>
           Name
        </th>
        <th>
           Description
        </th>
        <th width="14%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.Id }, new { @class = "btn btn-success btn-sm"}) 
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
